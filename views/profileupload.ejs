    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen flex items-center justify-center bg-blue-400">

        <!-- login form -->
        <div class="bg-white p-16 rounded shadow-2xl w-2/3">
      
          <h2 class="text-3xl font-bold mb-10 text-gray-800">Upload Profile Pic</h2>
      
          <form autocomplete="off" action="/upload" method="post" enctype="multipart/form-data" class="space-y-5">
      
              <div>
                <label class="block mb-1 font-bold text-gray-500">upload</label>
                <input name="image" type="file" class="w-full border-2 border-gray-200 p-3 rounded outline-none focus:border-purple-500">
              </div>
      
      
      
            <input type="submit" value="Sign Up" class="block w-full bg-yellow-400 hover:bg-yellow-300 p-4 rounded text-yellow-900 hover:text-yellow-800 transition duration-300">
      
          </form>
      
        </div>
      
      </div>
